load_paths:
  - lib/assets/javascripts
  - test/javascript/src
  - test/javascript/vendor

logical_paths:
  - sinon-1.17.5.js
  - relax.js
  - test.js

build:
  logical_paths:
    - relax.js
  path: dist
  js_compressor: uglifier

require:
  - <%= File.join(File.expand_path(File.dirname(__FILE__)), "test/blade_helper.rb") %>

plugins:
  sauce_labs:
    tunnel_args:
      - "--verbose"     # Turn on verbose logging.
      - "--vm-version"  # Use the varnish VM for WebSockets support.
      - "dev-varnish"
      - "--no-proxy-caching"
    browsers:
      IE:
        version: [10, 11]
      Chrome:
        version: -2
      Firefox:
        version: -2
      Microsoft Edge:
        version: -2
      Safari:
        version: -2
