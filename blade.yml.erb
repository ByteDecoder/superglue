load_paths:
  - lib/assets/javascripts
  - test/javascript/src
  - test/javascript/vendor

logical_paths:
  - sinon-1.17.5.js
  - relax.js
  - test.js

build:
  logical_paths:
    - relax.js
  path: dist
  js_compressor: uglifier

require:
  - <%= File.join(File.expand_path(File.dirname(__FILE__)), "test/blade_helper.rb") %>

plugins:
  sprockets_override_accept:
  sauce_labs:
    tunnel_args:
      - "--verbose"     # Turn on verbose logging.
      - "--vm-version"  # Use the varnish VM for WebSockets support.
      - "dev-varnish"
    browsers:
      Google Chrome:
        os: Mac
        version: -2
