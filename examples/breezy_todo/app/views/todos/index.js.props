json.todos do
  json.array! @todos do |todo|
    json.id todo.id
    json.description todo.description
    json.completed todo.completed
    json.created_at todo.created_at
    json.updated_at todo.updated_at
    json.todo_path todo_path(todo)
  end
end

json.count Todo.where(completed: [nil, false]).count

json.filter params['filter']

json.todos_path todos_path
