load_paths:
  - lib/assets/javascript
  - tmp/browserify
  - test/javascript/static

logical_paths:
  - breezy.js
  - test.js

require:
  - <%= File.join(File.expand_path(File.dirname(__FILE__)), "blade/test/blade_helper.rb") %>

plugins:
  sauce_labs:
    tunnel_args:
      - "--verbose"     # Turn on verbose logging.
      - "--vm-version"  # Use the varnish VM for WebSockets support.
      - "dev-varnish"
      - "--no-proxy-caching"
    browsers:
      IE:
        version: [10, 11]
      Chrome:
        version: -2
      Firefox:
        version: -2
      Microsoft Edge:
        version: -2
      Safari:
        version: -2
      iPhone:
        version: -1
